<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appka.mtaaaplikacia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="com.example.appka.mtaaaplikacia.MTAAApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.appka.mtaaaplikacia.LoginActivity"

            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TestActivity"
            android:label="@string/title_activity_testactivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.appka.mtaaaplikacia.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.example.appka.mtaaaplikacia.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.appka.mtaaaplikacia.AddActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.appka.mtaaaplikacia.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.appka.mtaaaplikacia.MyAccActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.example.appka.mtaaaplikacia.SettingsActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.example.appka.mtaaaplikacia.EditActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme.NoActionBar"/>
        <!--<activity android:name=".MyAccActivity"></activity>-->
    </application>

</manifest>
